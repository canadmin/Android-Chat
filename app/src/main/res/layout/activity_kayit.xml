<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/girisbackground"
    tools:context=".Activitys.KayitActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_req"
        style="@style/Animation.AppCompat.DropDownUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:id="@+id/lineerLayout1_req"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:id="@+id/img1_req"
                    android:tint="@color/white"
                     />
                <TextView
                    android:id="@+id/tv1_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:text="Yeni Hesap Oluştur" />

            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_below="@+id/lineerLayout1_req"
                android:layout_marginTop="-15dp"
                android:rotation="45"
                android:src="@drawable/asd"
                android:id="@+id/img2"
                android:layout_centerHorizontal="true"
                android:layout_height="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rel1_req"
                android:layout_below="@id/img2"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/imageView_usericon_req"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/req_eposta"
                    android:layout_width="255dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/imageView_usericon_req"
                    android:background="@color/edittextBG"
                    android:hint="E-Posta"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textSize="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:id="@+id/rel2_req"
                android:layout_below="@id/rel1_req"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/imageView_usericon2_req"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_person_black_24dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/req_ad"
                    android:layout_width="255dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/imageView_usericon2_req"
                    android:background="@color/edittextBG"
                    android:hint="Ad Soyad"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textSize="15dp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:id="@+id/rel3_req"
                android:layout_below="@id/rel2_req"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/imageView_usericon3_req"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_lock_black_24dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/req_sifre"
                    android:layout_width="255dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/imageView_usericon3_req"
                    android:background="@color/edittextBG"
                    android:hint="Şifre"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="15dp" />



            </RelativeLayout>

            <Button
                android:id="@+id/yarat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel3_req"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonlaricinarkaplan"
                android:drawableTint="@color/white"
                android:padding="15dp"
                android:text="Hesap Oluştur  "
                android:drawableRight="@drawable/ic_send_black_24dp"

                android:textColor="@color/white" />





        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>